<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_services_container"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#353A50">

    <ImageView
        android:id="@+id/activity_services_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_business_center_black_24dp" />

    <TextView
        android:id="@+id/activity_services_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingStart="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:paddingEnd="8dp"
        android:text="Se pinchÃ³ mi"
        android:maxLines="2"
        android:lines="2"
        android:gravity="center"
        android:textColor="#9396A9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_services_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>